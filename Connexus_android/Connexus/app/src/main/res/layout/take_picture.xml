        <ImageView
            android:id="@+id/picture_preview"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginTop="33dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_picture"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Take a Picture"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picture_preview"
            android:layout_marginLeft="50dp" />


        <Button
            android:id="@+id/btn_usepic"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="29dp"
            android:clickable="false"
            android:text="Use this picture"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picture_preview"
            android:layout_marginRight="37dp"
            app:layout_constraintLeft_toRightOf="@+id/btn_picture"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />


        <Button
            android:id="@+id/btn_take_streams"
            android:layout_width="293dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:text="Streams"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="-3dp" />
